{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "~/db/*": ["./db/*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
